<h3>Login</h3>
<%= form_tag sessions_path do %>
  <% if @message %>
    <div><%= @message %></div>
  <% end %>
  <%= label_tag :email %>
  <%= email_field_tag :email %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= submit_tag 'Login' %>
<% end %>

<%= link_to 'Register', new_user_path %>
